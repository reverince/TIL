<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent"
android:paddingLeft="16dp" android:paddingRight="16dp" android:paddingTop="16dp" android:paddingBottom="16dp" tools:context=".MainActivity">

	<TextView
    android:text="Hello, Android!"
		android:textSize="20sp"
		android:textColor="#4CAF50"
    android:background="@android:color/darker_gray"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

	<ImageView
    android:src="@drawable/cake"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleType="center" />

	<!-- 2강 텍스트 표시 -->
	<EditText
		android:id="@+id/edit_message"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="wrap_content"
		android:hint="@string/edit_message"
		android:inputType="text" />
	
	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="전송"
		android:onClick="sendMessage" />

	<!-- 3강 이벤트 처리 -->
	<EditText
		android:id="@+id/todo_item_edit"
		android_inputType="text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />
	
	<ListView
		android:id="@+id/todo_list_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

	<!-- 4강 인텐트 -->
	<TextView
		android:text="액티비티 실행"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	
	<Button
		android:id="@+id/btn_start_activity_1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="액티비티 1" />
	
	<Button
		android:id="@+id/btn_dial_number"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="010-1234-5678" />

	<EditText
		android:id="@+id/message_edit_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/edit_message" />
	
	<!-- 5강 브로드캐스트 리시버 -->
	<Button
		android:id="@+id/btn_blood_type_query"
		android:text="혈액형 선택"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />
	
	<TextView
		android:id="@+id/blood_type_text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

</LinearLayout>
